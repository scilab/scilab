            <LINK>dec2oct</LINK>
        </SEE_ALSO_ITEM>
        <SEE_ALSO_ITEM>
            <LINK>dec2hex</LINK>
        </SEE_ALSO_ITEM>
    </SEE_ALSO>
    
</MAN>
