        <separator/>
        <button action="scinotes-general-settings" tooltip="Scinotes General settings" icon="preferences-system"/>
        <separator/>
        <button action="scinotes-help" tooltip="Scinotes help" icon="help-browser"/>
    </ToolBar>

</Configuration>
