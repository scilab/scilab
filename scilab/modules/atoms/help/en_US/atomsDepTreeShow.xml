  <!-- Calling Sequence -->
  <!-- ===================================================================== -->
  <refsynopsisdiv>
    <title>Calling Sequence</title>
    <synopsis>
	  atomsDepTreeShow(module)
	</synopsis>
  </refsynopsisdiv>
  <!-- ===================================================================== -->
  <!-- Parameters -->
  <!-- ===================================================================== -->
  <refsection>
    <title>Parameters</title>
    <variablelist>
			<varlistentry>
        <term>module</term>
        <listitem>
					
          <para>
						1x1 or 1x2 Matrix of strings:
					</para>
					
					<informaltable border="1">
						
