  <!-- Examples -->
  <!-- ===================================================================== -->
  <refsection>
    <title>Examples</title>
    <programlisting role="example"><![CDATA[ 
atomsRepositoryAdd("http://scene1.test.atoms.scilab.org");
atomsDepTreeShow("toolbox_6")
 ]]></programlisting>
