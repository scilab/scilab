        <title>Voir aussi</title>
        <simplelist type="inline">
            <member>
                <link linkend="graduate">graduate</link>
            </member>
            <member>
                <link linkend="plot2d">plot2d</link>
            </member>
        </simplelist>
    </refsection>
</refentry>
