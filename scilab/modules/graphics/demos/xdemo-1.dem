function xdemo6()

	xbasc();
	xset("default");
	expr=[
	"rect=[0,0,100,100];"
	"plot2d(0,0,[0],''012'',''leg'',rect);"
	"xclip(''clipgrf'');"
	"x=[0 25 25  0 0]'';y=[0 0 25 25 0]'';d=25*[1 1 1 1 1]'';"
	"xx=[];yy=[];i=0;"
	"for k=1:4"
	"  for l=1:4"
	"    i=i+1;"
	"    xx=[xx,(l-1)*d+x];yy=[yy,y+(k-1)*d];"
	"  end"
	"end"
	"xfpolys(xx,yy,(1:16));xclip();"];
	xdemo("[VI]",expr);

endfunction


