// Runge-Kutta-Method failed for vector [x, 1] with x > 9

dt = 0.25;
a = 1;
b = a/dt;
t = 0:dt:a;
t0 = t(1);
St = size(t);
Dim = 18;
x = ones(Dim, 1);
X = eye(Dim,Dim);

function xdot = Test(t, x)
  xdot = X * x;
endfunction

x = ode('rk', x, t0, t, Test);
assert_checkequal(size(x), [18 5]);

