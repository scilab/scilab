NB       = 10
 NB  = 
   10.
NR       = 1000
 NR  = 
   1000.
answer   = ones(NB,NR);
genlst   = [1,5,10,20,32]
 genlst  = 
   1.   5.   10.   20.   32.
nbad     = 0;
