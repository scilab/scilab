      <member><link linkend="cmndred">cmndred</link></member>

      <member><link linkend="factors">factors</link></member>
    </simplelist>
  </refsection>

  <refsection>
    <title>Autor</title>

    <para>S. Steer INRIA</para>
  </refsection>
</refentry>
