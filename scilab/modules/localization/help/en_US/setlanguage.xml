<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MAN SYSTEM "../../../../modules/helptools/help.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>

  <TITLE>setlanguage</TITLE>

  <TYPE>Scilab Function</TYPE>

  <DATE>$LastChangedDate$</DATE>

  <SHORT_DESCRIPTION name="setlanguage">Sets the internal LANGUAGE
  value.</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>setlanguage(language)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>language</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: with language='fr' or  'en', ... </SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
    </PARAM_INDENT>
  </PARAM>

  <DESCRIPTION>
    <P><VERB>setlanguage(language)</VERB> changes current language in scilab.</P>
  </DESCRIPTION>
  
    <EXAMPLE>
<![CDATA[
setlanguage('en_US')
getlanguage()
setlanguage('en')
getlanguage()
setlanguage('fr')
getlanguage()
setlanguage('fr_FR')
getlanguage()
 ]]>
  </EXAMPLE>

  <SEE_ALSO>
    <SEE_ALSO_ITEM>
      <LINK>getlanguage</LINK>
    </SEE_ALSO_ITEM>
  </SEE_ALSO>

  <AUTHORS>
    <AUTHORS_ITEM>A.C.</AUTHORS_ITEM>
  </AUTHORS>
</MAN>