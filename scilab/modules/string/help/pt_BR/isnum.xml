  <refnamediv>
    <refname>isnum</refname>

    <refpurpose>testa se um string representa um número</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <title>Seqüência de Chamamento</title>

    <synopsis>res = isnum(str)</synopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Parâmetros</title>

    <variablelist>
      <varlistentry>
        <term>str</term>

        <listitem>
          <para>um string ou matriz de strings</para>
        </listitem>
      </varlistentry>

      <varlistentry>
        <term>res</term>

        <listitem>
          <para>matriz de booleanos</para>
        </listitem>
      </varlistentry>
    </variablelist>
  </refsection>

  <refsection>
    <title>Descrição</title>

    <para><literal>res = isnum(str)</literal>retorna %T se str representa um
    número</para>
  </refsection>

  <refsection>
    <title>Exemplos</title>

    <programlisting role="example">
	
isnum(['1'     , ..
       '-1.23' , ..
       '+1e+23', .. 
       '1d+23' , ..
       '%pi'])
	
	</programlisting>
  </refsection>

