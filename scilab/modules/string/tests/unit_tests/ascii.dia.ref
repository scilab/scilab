// == TEST 7 ===================================================================
A = floor( 126 * rand(100,100) );
if or( ascii(A) <> ascii(int8(A)) )  then bugmes();quit;end
if or( ascii(A) <> ascii(int16(A)) ) then bugmes();quit;end
