            <member>
                <link linkend="hat">крышечка</link>
            </member>
            <member>
                <link linkend="sqrt">sqrt</link>
            </member>
            <member>
                <link linkend="sqrtm">sqrtm</link>
            </member>
        </simplelist>
    </refsection>
</refentry>
