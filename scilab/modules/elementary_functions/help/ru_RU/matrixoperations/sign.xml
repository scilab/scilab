            </member>
            <member>
                <link linkend="signm">signm</link>
            </member>
        </simplelist>
    </refsection>
    <refsection role="history">
        <title>История</title>
        <revhistory>
            <revision>
                <revnumber>6.0</revnumber>
                <revdescription>Extension to sparse matrices
                </revdescription>
            </revision>
        </revhistory>
    </refsection>
</refentry>
